<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"


         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="-----------APPLICATIONS--------"
        android:textColor="#dead0202"
        android:textSize="30sp"
        android:gravity="center"
        />

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Callingapps.MainActivity"
    android:layout_below="@id/toolbar"
    android:background="#d1eb91"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i1"
            android:src="@drawable/dialer"
            android:layout_above="@+id/b2"
            android:layout_marginBottom="10dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_marginBottom="11dp"
            android:id="@+id/i2"
            android:layout_above="@+id/b3"

            android:src="@drawable/browser"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i3"
            android:src="@drawable/googlemap"
            android:layout_alignTop="@+id/b3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i4"
            android:src="@drawable/contact"
            android:layout_alignBottom="@+id/b4"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i5"
            android:src="@drawable/camera"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/b6"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i6"
            android:src="@drawable/music"
            android:layout_alignBottom="@+id/b6"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i7"
            android:layout_above="@+id/b8"
            android:layout_marginBottom="10dp"
            android:src="@drawable/sms"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i8"
            android:src="@drawable/gmail"
            android:layout_alignTop="@+id/b8"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i9"
            android:src="@drawable/calender"
            android:layout_alignTop="@+id/b9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/i10"

            android:src="@drawable/calculator"
            android:layout_alignTop="@+id/b10"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp" />


        <Button
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:text="Dial"
            android:id="@+id/b1"

            android:backgroundTint="#f5d451"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            />


        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Browser"
            android:id="@+id/b2"
            android:layout_alignParentRight="true"
            android:layout_below="@id/b1"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Google_Maps"
            android:id="@+id/b3"
            android:backgroundTint="#f5d451"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/b2"/>

        <Button
            android:id="@+id/b4"
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Contacts"
            android:layout_below="@id/b3"/>

        <Button
            android:id="@+id/b5"
            android:layout_width="320dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/b4"
            android:layout_alignParentRight="true"
            android:backgroundTint="#f5d451"
            android:text="Camera" />

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Music_Player"
            android:id="@+id/b6"
            android:layout_below="@id/b5"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="SMS"
            android:layout_below="@id/b6"
            android:layout_marginTop="20dp"
            android:id="@+id/b7"
            android:backgroundTint="#f5d451"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Gmail"
            android:layout_below="@id/b7"
            android:id="@+id/b8"
            android:layout_alignParentRight="true"
            />
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Calender"
            android:backgroundTint="#f5d451"
            android:layout_below="@id/b8"
            android:layout_alignParentRight="true"
            android:id="@+id/b9"
           />
        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:id="@+id/b10"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/b9"/>

    </RelativeLayout>

</ScrollView>


</RelativeLayout>